<UserControl x:Class="DataOperatorTool.SelectFbfPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataOperatorTool"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <DockPanel>
            <TextBlock Text="县：" VerticalAlignment="Center"/>
            <ComboBox Name="cbCounty"/>
        </DockPanel>
        <DockPanel Margin="0,5,0,0">
            <TextBlock Text="乡：" VerticalAlignment="Center"/>
            <ComboBox Name="cbTown"/>
        </DockPanel>
        <DockPanel Margin="0,5,0,0">
            <TextBlock Text="村：" VerticalAlignment="Center"/>
            <ComboBox Name="cbVillage"/>
        </DockPanel>
        <DockPanel Margin="0,5,0,0">
            <TextBlock Text="组：" VerticalAlignment="Center"/>
            <ComboBox Name="cbGroup"/>
        </DockPanel>
    </StackPanel>
</UserControl>
