<Window x:Class="TestTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTool"
        mc:Ignorable="d"
        Title="承包经营权统计数据生成工具" Height="241.416" Width="448.498" WindowStartupLocation="CenterScreen">
	<Window.Resources>
		<ResourceDictionary>
			<Style x:Key="mybtnStyle" TargetType="Button">
				<Setter Property="Height" Value="50"/>
				<Setter Property="Margin" Value="10"/>
			</Style>
		</ResourceDictionary>
	</Window.Resources>
	<StackPanel>
		<Button Content="创建索引" Name="btnCreateIndex" Click="btnRun_Click" Style="{StaticResource mybtnStyle}"/>
		<Button Content="数据导入" Name="btnRun" Click="btnRun_Click" Style="{StaticResource mybtnStyle}"/>
	</StackPanel>
</Window>
