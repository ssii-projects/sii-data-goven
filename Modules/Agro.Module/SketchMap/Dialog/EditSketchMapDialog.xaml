			 xmlns:m="clr-namespace:Agro.GIS;assembly=Agro.LibMap"
			  mc:Ignorable="d" 
                  d:DesignHeight="620"
                  d:DesignWidth="680">
    <Grid Background="{DynamicResource Metro_Window_Style_Background_Content}"
          ClipToBounds="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
