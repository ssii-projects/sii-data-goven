<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="text" format="string" />
    <attr name="readonly" format="boolean"/>
    <attr name="inputType">
        <enum name="none" value="0"/>
        <enum name="text" value="1"/>
        <enum name="numberDecimal" value="2"/>
    </attr>


    <declare-styleable name="ToolButton">
        <attr name="width" format="dimension" />
        <attr name="height" format="dimension" />

        <attr name="image_normal" format="reference|color" />
        <attr name="image_check" format="reference|color" />
        <attr name="image_disable" format="reference|color" />

        <attr name="text"/>
    </declare-styleable>
    <declare-styleable name="TabItem">
        <attr name="text"/>
    </declare-styleable>

    <declare-styleable name="PropItemText">
        <attr name="text"/>
        <attr name="readonly"/>
        <attr name="inputType"/>
    </declare-styleable>

    <declare-styleable name="PropItemSpinner">
        <attr name="text"/>
        <attr name="readonly"/>
    </declare-styleable>

</resources>
