<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/topbar_bkgnd"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/cbf_lst_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:iconifiedByDefault="false"
            android:queryHint="请输入承包方名称"
            android:visibility="visible"></SearchView>

        <com.sii.datagovenpad.control.CustomImageButton
            android:id="@+id/btn_cbf_lst_info"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/btn_bottom_confirm_bg"
            android:src="@drawable/info" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:id="@+id/btn_add_cbf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            tools:visibility="invisible" />

        <Button
            android:id="@+id/btn_del_cbf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删除"
            android:visibility="invisible" />


        <Button
            android:id="@+id/btn_edit_cbf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="编辑"
            android:visibility="visible" />


    </LinearLayout>

    <ListView
        android:id="@+id/cbf_list_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:divider="@null"
        android:focusable="true"
        android:focusableInTouchMode="true" />
</LinearLayout>
